<h2>Comments</h2>
<% @post.comments.published_comment.each do |comment|%>
  <p>
    <%= comment.author.last_name %>
  </p>
  <p>
    <%= comment.body %>
  </p>
  <p>
    <%= comment.status %>
  </p>
  <p>
    <%= link_to 'Destroy', [comment.post, comment], method: :delete,
                  data: { confirm: 'Are you sure?'}, class: "btn btn-danger text-white mr-1" %>
  </p>
<% end %>
