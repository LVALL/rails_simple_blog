<%= form_with model: [ @post, @comment ], local: true do |form| %>

  <%= form.hidden_field :parent_id, value: parent_id if parent_id.present? %>

  <div class="field">
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="actions mt-3">
    <%= form.submit "Comment", class: 'btn btn-outline-info text-dark d-inline-block float-right' %>
  </div>
<% end %>
